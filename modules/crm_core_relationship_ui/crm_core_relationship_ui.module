      'page callback' => 'crm_core_relationship_ui_add_relationship',
      'page arguments' => array(($key == 'contact' ? 2 : NULL)),
      'access callback' => TRUE,
      'type' => MENU_LOCAL_ACTION,
      'file' => 'crm_core_relationship_ui.pages.inc',
      'weight' => 10,
