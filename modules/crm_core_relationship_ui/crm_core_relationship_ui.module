    'page arguments' => array(NULL, 2, 3),
    'access callback' => 'crm_core_relationship_access_permissions',
    'access arguments' => array(2, 'create'),
    'type' => MENU_CALLBACK,
    'file' => 'crm_core_relationship_ui.pages.inc',
